{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@lunajs/ts-config/base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "rootDir": "./src/",
    "baseUrl": "./",
    "outDir": "./dist/",
    "target": "ESNext",
    "declarationMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
